import java.util.Scanner;

public class KingsTreasury {
    static int sumCoins(int n) {
        if (n == 0) return 0;
        return n + sumCoins(n - 1);
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        System.out.println(sumCoins(n));
    }
}
